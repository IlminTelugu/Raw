<div id="popupModal">
  <div id="popupBox">
    <button id="closeBtn">&times;</button>
    <img src="https://i.ibb.co/PZNxC2pq/IMG-20250804-WA0024.jpg" alt="Image 1">
    <img src="https://i.ibb.co/Qvkk7ZC8/IMG-20250804-WA0023.jpg" alt="Image 2">
  </div>
</div>

<script>
  const images = [
    "https://i.ibb.co/PZNxC2pq/IMG-20250804-WA0024.jpg",
    "https://i.ibb.co/Qvkk7ZC8/IMG-20250804-WA0023.jpg",
    "https://i.ibb.co/WC1THwG/IMG-20250804-WA0021.jpg",
    "https://i.ibb.co/2w14H7R/IMG-20250804-WA0020.jpg",
    "https://i.ibb.co/hR9t6TZ3/IMG-20250804-WA0019.jpg"
  ];

  function showRandom() {
    const randomIndex = Math.floor(Math.random() * images.length);
    document.getElementById("randomImage").src = images[randomIndex];
  }

  window.onload = function () {
    showRandom();

    // Show popup after 10 seconds
    setTimeout(() => {
      document.getElementById("popupModal").style.display = "flex";
    }, 10000);
  };

  // Close popup
  document.getElementById("closeBtn").onclick = function () {
    document.getElementById("popupModal").style.display = "none";
  };
</script>

