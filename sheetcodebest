  ];

  function showRandom() {
    const randomIndex = Math.floor(Math.random() * images.length);
    document.getElementById("randomImage").src = images[randomIndex];
  }

  window.onload = function () {
    showRandom();

    const name = prompt("‡∞Æ‡±Ä ‡∞™‡±á‡∞∞‡±Å?");
    if (!name) return;

    const village = prompt("‡∞Æ‡±Ä ‡∞ä‡∞∞‡∞ø ‡∞™‡±á‡∞∞‡±Å?");
    if (!village) return;

    fetch("https://script.google.com/macros/s/AKfycbxdRk5OfD2ilftNS7SYVNfG4sB9swOmUxDi0dEaODhpybIP2I_FRutGEh82aaMWxkW3Wg/exec", {
      method: "POST",
